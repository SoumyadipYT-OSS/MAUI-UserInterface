<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Animation.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30" HorizontalOptions="Center">
            <Label Text="MAUI Animation Demo"
                   FontSize="24" HorizontalOptions="Center" />

            <Button Text="Basic Animations" Clicked="OnBasicAnimationClicked"
                    HorizontalOptions="Center" />

            <Button Text="Easing Function" Clicked="OnEasingFunctionClicked"
                    HorizontalOptions="Center" />

            <Button Text="Custom Animation" Clicked="OnCustomAnimationClicked" 
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
