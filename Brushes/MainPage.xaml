<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Brushes.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Label 
                Text="Brushes in .NET MAUI"
                FontSize="24"
                HorizontalOptions="Center" />

            <Button 
                Text="SolidColorBrush Example"
                Clicked="SolidColorBrush_Clicked"
                HorizontalOptions="Center" />

            <Button 
                Text="LinearGradientBrush Example"
                Clicked="LinearGradientBrush_Clicked"
                HorizontalOptions="Center" />

            <Button Text="RadialGradientBrush Example"
                    Clicked="RadialGradientBrush_Clicked"
                    HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
