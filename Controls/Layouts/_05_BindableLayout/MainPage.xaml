<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_05_BindableLayout.MainPage">

    <ScrollView>
        <!-- I have used Flex Layout, for controlling complex layout and control the binding smoothly in this page -->
        <FlexLayout>
            <!-- Example 1 (Basic) -->
            <Label Text="Example 1 (Basic)" />
            <StackLayout>
                <!-- BindableLayout for a StackLayout -->
                <StackLayout BindableLayout.ItemsSource="{Binding Items}">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="Gray" StrokeThickness="1" Padding="10" Margin="5">
                                <Label Text="{Binding Name}" FontSize="20" />
                            </Border>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </StackLayout>
            
            
            
        </FlexLayout>
    </ScrollView>

</ContentPage>
