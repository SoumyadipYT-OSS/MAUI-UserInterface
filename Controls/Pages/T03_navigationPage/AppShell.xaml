<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="T03_navigationPage.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:T03_navigationPage"
    xmlns:pages="clr-namespace:T03_navigationPage.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="T03_navigationPage">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <!-- Orange Page routing -->
    <ShellContent
        Title="OrangePage"
        ContentTemplate="{DataTemplate pages:PageOrange}"
        Route="PageOrange" />
    
    <!-- Brown Page routing -->
    <ShellContent
        Title="BrownPage"
        ContentTemplate="{DataTemplate pages:PageBrown}"
        Route="PageBrown" />
    
    <!-- Purple Page routing -->
    <ShellContent
        Title="PurplePage"
        ContentTemplate="{DataTemplate pages:PagePurple}"
        Route="PagePurple" />

</Shell>
