<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T05_ShellPage.Views.NewsPage"
             Title="NewsPage">
    
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- News Section -->
            <Label Text="Gym Items News" FontSize="24" TextColor="#2196F3" HorizontalOptions="Center" />

            <!-- Card 1 -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="2" Stroke="#E0E0E0" Padding="10" Margin="0,10,0,0">
                <StackLayout>
                    <Image Source="gymone.png" HeightRequest="150" />
                    <Label Text="New Gym Equipment" FontSize="18" TextColor="Black" />
                    <Label Text="Check out the latest gym equipment available now." FontSize="14" TextColor="Gray" />
                    <Button Text="Read More" BackgroundColor="#2196F3" TextColor="White" />
                </StackLayout>
            </Border>

            <!-- Card 2 -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="2" Stroke="#E0E0E0" Padding="10" Margin="0,10,0,0">
                <StackLayout>
                    <Image Source="gymtwo.png" HeightRequest="150" />
                    <Label Text="Fitness Tips" FontSize="18" TextColor="Black" />
                    <Label Text="Learn some new fitness tips to improve your workouts." FontSize="14" TextColor="Gray" />
                    <Button Text="Read More" BackgroundColor="#2196F3" TextColor="White" />
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>