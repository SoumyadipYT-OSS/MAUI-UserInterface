<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="T05_ShellPage.Views.SupportPage"
             Title="SupportPage">
    
    <ScrollView>
        <StackLayout Padding="20" Spacing="20">
            <!-- Welcome Section -->
            <Border BackgroundColor="#2196F3" StrokeThickness="2" Stroke="#2196F3" Padding="20">
                <StackLayout>
                    <Label Text="Support" FontSize="30" TextColor="White" HorizontalOptions="Center" />
                    <Label Text="We're here to help you with any issues or questions you may have." FontSize="18" TextColor="White" HorizontalOptions="Center" />
                </StackLayout>
            </Border>

            <!-- Contact Information Section -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="2" Stroke="#E0E0E0" Padding="10" Margin="0,10,0,0">
                <StackLayout>
                    <Label Text="Contact Information" FontSize="24" TextColor="#2196F3" />
                    <Label Text="Email: support@fitlife.com" FontSize="18" TextColor="Black" />
                    <Label Text="Phone: +1 (800) 123-4567" FontSize="18" TextColor="Black" />
                </StackLayout>
            </Border>

            <!-- Support Request Form Section -->
            <Border BackgroundColor="#FFFFFF" StrokeThickness="2" Stroke="#E0E0E0" Padding="10" Margin="0,10,0,0">
                <StackLayout>
                    <Label Text="Submit a Support Request" FontSize="24" TextColor="#2196F3" />
                    <Entry Placeholder="Your Name" FontSize="18" />
                    <Entry Placeholder="Your Email" FontSize="18" />
                    <Editor Placeholder="Describe your issue or question" FontSize="18" HeightRequest="100" />
                    <Button Text="Submit" BackgroundColor="#2196F3" TextColor="White" />
                </StackLayout>
            </Border>
        </StackLayout>
    </ScrollView>
</ContentPage>