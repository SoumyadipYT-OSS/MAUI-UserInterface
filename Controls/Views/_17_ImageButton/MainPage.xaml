<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_17_ImageButton"
             x:DataType="local:MainPage"
             x:Class="_17_ImageButton.MainPage"
             Title="Animated ImageButton">


    <Grid>
        <!-- Background Image -->
        <Image Source="efootball_banner.jpg" Aspect="AspectFit" />
        
        <!-- Animated ImageButton -->
        <ImageButton Source="modernbutton.gif" x:Name="AnimatedButton"
                     HorizontalOptions="Center" VerticalOptions="Center"
                     WidthRequest="30" HeightRequest="15"
                     Aspect="AspectFit" BackgroundColor="Transparent"
                     Margin="115, 150, 0, 0" Clicked="OnImageButtonClicked" />
        
        <!-- Media Element to Play Sound -->
        

    </Grid>
    
</ContentPage>
