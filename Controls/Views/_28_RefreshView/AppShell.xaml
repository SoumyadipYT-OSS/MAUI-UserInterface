<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_28_RefreshView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_28_RefreshView"
    xmlns:pages="clr-namespace:_28_RefreshView.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="_28_RefreshView">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="CustomRefreshPage"
        ContentTemplate="{DataTemplate pages:CustomRefreshPage}"
        Route="CustomRefreshPage" />

    <ShellContent
        Title="CustomRefreshIconPage"
        ContentTemplate="{DataTemplate pages:CustomRefreshIconPage}"
        Route="CustomRefreshIconPage" />

    <ShellContent
        Title="CustomDesignRefreshPage"
        ContentTemplate="{DataTemplate pages:CustomDesignRefreshPage}"
        Route="CustomDesignRefreshPage" />
</Shell>