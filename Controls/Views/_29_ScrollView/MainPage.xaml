<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_29_ScrollView.MainPage">


    <!-- A vertical ScrollView encapsulating dynamic content -->
    <ScrollView Orientation="Vertical" VerticalScrollBarVisibility="Always"
                Scrolled="OnScrolled">

        <StackLayout Spacing="20" Padding="10">
            <!-- Simulate multiple content sections -->
            <Label Text="Welcome to the Advanced ScrollView Demo" FontSize="24" />
            <Button Text="Click Me" />
            <!-- Replicate content to emulate an overflowing view -->
            <Label Text="Section 1" FontSize="18" />
            <BoxView Color="LightBlue" HeightRequest="300" />
            <Label Text="Section 2" FontSize="18" />
            <BoxView Color="LightGreen" HeightRequest="300" />
            <Label Text="Section 3" FontSize="18" />
            <BoxView Color="LightCoral" HeightRequest="300" />
        </StackLayout>
    </ScrollView>

</ContentPage>
