<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_30_SearchBar.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_30_SearchBar"
    xmlns:pages="clr-namespace:_30_SearchBar.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="_30_SearchBar">

    <ShellContent
        Title="Normal Search Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Title="Advanced Search Page"
                  ContentTemplate="{DataTemplate pages:AdvancedSearchBar}"
                  Route="AdvancedSearchBar" />

</Shell>
