<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_30_SearchBar"
             
             x:Class="_30_SearchBar.MainPage">


    <StackLayout>
        <SearchBar x:Name="searchBar"
                   Placeholder="Search items" CancelButtonColor="OrangeRed"
                   PlaceholderColor="Gray" BackgroundColor="LightBlue"
                   TextColor="DarkGoldenrod"
                   TextChanged="OnSearchBarTextChanged"
                   SearchButtonPressed="OnSearchBarButtonPressed" />
        <ListView x:Name="listView">
            <!-- ItemTemplate and other properties -->
        </ListView>
    </StackLayout>

</ContentPage>
