<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_36_TableView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_36_TableView"
    xmlns:table="clr-namespace:_36_TableView.TableClass"
    Shell.FlyoutBehavior="Flyout"
    Title="_36_TableView">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Basic TableView Class" 
        ContentTemplate="{DataTemplate table:BasicTable}" />

    <ShellContent
        Title="Advanced TableView Class"
        ContentTemplate="{DataTemplate table:AdvancedTable}"/>

</Shell>