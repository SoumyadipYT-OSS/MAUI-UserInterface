<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_37_TextCell.MainPage">

    <!-- Here We'll write the explanation of 'TextCell' class control of .NET Maui. We'll use good design in explanation part -->
    <ScrollView>
        <StackLayout Padding="20">
            <Label Text="TextCell Class in .NET MAUI"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="DarkSlateBlue"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>

            <Label Text="The TextCell class is a specialized cell used in TableView controls to display text and detail text. It is commonly used to create lists or menus in .NET MAUI applications."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,10"/>

            <Label Text="Key Properties:"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="DarkSlateBlue"
                   Margin="0,10,0,5"/>

            <Label Text="• Text: The main text to display in the cell."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,5"/>

            <Label Text="• Detail: The detail text to display below the main text."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,5"/>

            <Label Text="• TextColor: The color of the main text."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,5"/>

            <Label Text="• DetailColor: The color of the detail text."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,5"/>

            <Label Text="• Command: The command to execute when the cell is tapped."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,5"/>

            <Label Text="Example Usage:"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="DarkSlateBlue"
                   Margin="20,20,0,10"/>

            <Label Text="Below is an example of how to use the TextCell class in a TableView:"
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,10"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,0,0,10"/>

            <Label Text="var tableView = new TableView {"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="    Intent = TableIntent.Menu,"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="    Root = new TableRoot {"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="        new TableSection {"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="            new TextCell {"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="                Text = 'Main Text',"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="                Detail = 'Detail Text',"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="                TextColor = Colors.Black,"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="                DetailColor = Colors.Gray"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="            }"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="        }"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="    }"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>
            <Label Text="};"
                   FontSize="16"
                   TextColor="Black"
                   FontFamily="Courier New"/>

            <BoxView HeightRequest="1" Color="LightGray" Margin="0,10,0,10"/>

            <Label Text="This example creates a TableView with a single TextCell displaying main text and detail text."
                   FontSize="18"
                   TextColor="DimGray"
                   Margin="0,0,0,10"/>
        </StackLayout>
    </ScrollView>
</ContentPage>