<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="_40_TwoPaneView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:_40_TwoPaneView"
    Shell.FlyoutBehavior="Flyout"
    Title="_40_TwoPaneView">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Advanced TwoPaneView"
    ContentTemplate="{DataTemplate local:AdvancedTwoPaneViewPage}"
    Route="AdvancedTwoPaneViewPage" />

</Shell>