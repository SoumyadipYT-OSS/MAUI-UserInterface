<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:_10_ContentView.CustomContentViews"
             x:DataType="local:CustomContentView"
             x:Class="_10_ContentView.MainPage">
    
    
    <StackLayout>
        <Label Text="Welcome to .NET MAUI!"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="CenterAndExpand" />
        <Button Text="Go to Second Page"
                Clicked="OnNavigateButtonClicked"/>
        <!-- Adding CustomContentView instance -->
        <local:CustomContentView Title="Custom Title"
                                 Description="This is a description for the custom ContentView."/>
    </StackLayout>
    
</ContentPage>
